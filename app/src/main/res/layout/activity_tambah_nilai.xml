<!-- activity_tambah_nilai.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/imgbg"
    tools:context=".TambahNilaiActivity">

    <EditText
        android:id="@+id/editTextNIMNilai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="#35ffffff"
        android:padding="8dp"
        android:fontFamily="@font/montserratlight"
        android:hint="NIM"/>

    <EditText
        android:id="@+id/editTextKodeMKNilai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextNIMNilai"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="#35ffffff"
        android:fontFamily="@font/montserratlight"
        android:padding="8dp"
        android:hint="Kode Mata Kuliah"/>

    <EditText
        android:id="@+id/editTextNilai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextKodeMKNilai"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:background="#35ffffff"
        android:padding="8dp"
        android:fontFamily="@font/montserratlight"
        android:inputType="numberDecimal"
        android:hint="Nilai"/>

    <Button
        android:id="@+id/buttonTambahNilai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextNilai"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/montserratmedium"
        android:backgroundTint="#45ffffff"
        android:textColor="@color/black"
        android:text="Tambah Nilai"/>
</RelativeLayout>
